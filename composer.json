{
  "name": "enclave/roles-and-permission",
  "description": "Define laravel permissions and roles by code",
  "keywords": [
    "enclave",
    "permission",
    "laravel",
    "security",
    "acl",
    "roles"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Kamil Bartczak",
      "email": "kamil.bartczak06839@gmail.com",
      "homepage": "https://enclave.de",
    },
    {
      "name": "Philipp Kuebler",
      "email": "philipp@enclave.com",
      "homepage": "https://enclave.de",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "orchestra/testbench": "^3.7",
    "phpunit/phpunit": "8.3.4",
    "phpmd/phpmd": "^2.6",
    "squizlabs/php_codesniffer": "^3.3",
    "consistence/coding-standard": "^3.8",
    "slevomat/coding-standard": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "enclave\\RolesAndPermission\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "enclave\\RolesAndPermission\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "lint:phpcs": "vendor/bin/phpcs -s",
    "lint:phpmd": "vendor/bin/phpmd config,src,tests text phpmd.xml",
    "fix": "vendor/bin/phpcbf"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "enclave\\RolesAndPermission\\PermissionServiceProvider"
      ]
    }
  }
}
